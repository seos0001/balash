---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { Image } from 'astro:assets';
import soho02 from "../assets/images/soho02.webp";
import soho03 from "../assets/images/soho03.webp";
import soho04 from "../assets/images/soho04.webp";
import soho05 from "../assets/images/soho05.webp";
import ceviche01 from "../assets/images/ceviche01.webp";
import ceviche02 from "../assets/images/ceviche02.webp";
import cabbage01 from "../assets/images/cabbage01.webp";
import cabbage02 from "../assets/images/cabbage02.webp";
import bar from "../assets/images/bar.webp";
import cheesecake from "../assets/images/cheesecake.webp";
import table from "../assets/images/table.webp";
import pumpkin from "../assets/images/pumpkin.webp";
---

<style>
  .scroll-animate {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .scroll-animate.show {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<MainLayout>
  <div class="bg-[#C6C6C6] min-h-screen flex flex-col justify-between text-black">

         <!-- Header -->
         <header class="z-20 relative">
          <Header />
        </header>

  <div class="max-w-6xl mx-auto pt-36 px-10 space-y-24">


    <!-- Top row -->
    <div class="grid grid-cols-3 gap-8">
      <img src={soho03.src} alt="soho03" class="scroll-animate object-cover w-full h-auto" />
      <img src={soho02.src} alt="soho02" class="scroll-animate object-cover w-full h-auto" />
      <img src={soho05.src} alt="soho05" class="scroll-animate object-cover w-full h-auto" />
    </div>

    <!-- Full width image -->
    <img src={soho04.src} alt="table" class="scroll-animate w-full h-auto object-cover" />

    <!-- First text, aligned right -->
    <div class="grid grid-cols-3 gap-8">
      <div class="col-span-2"></div>
      <p class="scroll-animate text-black text-sm leading-relaxed">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      </p>
    </div>

    <!-- Middle images -->
    <div class="grid grid-cols-4 gap-8">
      <img src={bar.src} alt="bar" class="scroll-animate object-cover w-full h-auto" />
      <img src={pumpkin.src} alt="pumpkin" class="scroll-animate object-cover w-full h-auto" />
      <img src={cheesecake.src} alt="cheesecake" class="scroll-animate object-cover w-full h-auto" />
      <img src={table.src} alt="table" class="scroll-animate object-cover w-full h-auto" />
    </div>

    <!-- Second text, aligned left -->
    <div class="grid grid-cols-3 gap-8">
      <p class="scroll-animate text-black text-sm leading-relaxed">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      </p>
      <div class="col-span-2"></div>
    </div>

    <!-- Two larger images -->
    <div class="grid grid-cols-2 gap-8">
      <img src={ceviche01.src} alt="ceviche01" class="scroll-animate object-cover w-full h-auto" />
      <img src={ceviche02.src} alt="ceviche02" class="scroll-animate object-cover w-full h-auto" />
    </div>

    <!-- Final text, centered -->
    <div class="flex justify-center">
      <p class="scroll-animate text-black text-center text-sm leading-relaxed max-w-md">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt labore.
      </p>
    </div>

    <!-- Last two images -->
    <div class="grid grid-cols-2 gap-8">
      <img src={cabbage01.src} alt="cabbage01" class="scroll-animate object-cover w-full h-auto" />
      <img src={cabbage02.src} alt="cabbage02" class="scroll-animate object-cover w-full h-auto" />
    </div>


  </div>

  <!-- Scroll animation script -->
  <script client:load>
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('show');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.scroll-animate').forEach(el => observer.observe(el));
  </script>

      <!-- Footer -->
      <footer class="z-20 relative">
        <Footer />
      </footer>
</MainLayout>


