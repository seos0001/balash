---
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import pumpkin from "../assets/images/pumpkin.webp";
import bar from "../assets/images/bar.webp";
import soho01 from "../assets/images/soho01.webp";
import soho02 from "../assets/images/soho02.webp";
import soho03 from "../assets/images/soho03.webp";
import ceviche01 from "../assets/images/ceviche01.webp";
import ceviche02 from "../assets/images/ceviche02.webp";
import cabbage01 from "../assets/images/cabbage01.webp";
import cheesecake from "../assets/images/cheesecake.webp";
import pavlova from "../assets/images/pavlova.webp";

const galleryImages = [bar, soho01, soho02, soho03, ceviche01, pumpkin, ceviche02, cabbage01, cheesecake, pavlova];
---

<MainLayout>

  
  <div class="bg-[#C6C6C6] min-h-screen">

        <!-- Header -->
        <header class="z-20 relative">
          <Header />
        </header>


    <!-- HORIZONTAL SCROLLING GALLERY -->
    <section class="w-full mt-16 overflow-x-auto">
      <div class="flex gap-4 px-4 md:px-12 pb-6 scroll-smooth snap-x snap-mandatory overflow-x-auto">
        {galleryImages.map((img, i) => (
          <div class="flex-shrink-0 w-[80vw] md:w-[40vw] h-[300px] snap-center overflow-hidden" key={i}>
            <img src={img.src} alt={`gallery-${i}`} class="w-full h-full object-cover" />
          </div>
        ))}
      </div>
    </section>

        <!-- Footer -->
        <footer class="z-20 relative">
          <Footer />
        </footer>
  </div>
</MainLayout>





















