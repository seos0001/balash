---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout>
  <!-- Grøn baggrund over hele siden -->
  <div class="bg-[#97977c] min-h-screen flex flex-col justify-between text-black">

    <!-- Header -->
    <header class="z-20 relative">
      <Header />
    </header>

    <!-- Main content -->
    <main class="flex-grow px-6">
      <div class="w-full max-w-3xl mx-auto flex flex-col md:flex-row justify-between mt-12 md:ml-32">

        <!-- Tekstkolonne -->
        <div class="w-full md:w-2/3">
          <!-- Toptekst -->
          <div class="mb-15">
            <p class="text-[42px] leading-snug mb-25">
              For any questions or<br />
              inquiries on private events<br />
              please contact.
            </p>
          </div>

          <!-- Kontaktpersoner -->
          <div class="mb-10 text-[18px]">
            <p>Emil Dos Santos / chef and service</p>
            <p>Bertram Blauenfeldt Otkjær / wine and service</p>
            <p>Vincent Groos / finance and service</p>
          </div>

          <!-- Mail og telefon -->
          <div class="flex justify-between text-[14px] w-full">
            <a href="mailto:balashaps@gmail.com" class="underline hover:text-[#1100FF] transition">
              balashaps@gmail.com
            </a>
            <a href="tel:+4530493847" class="underline hover:text-[#1100FF] transition">
              +45 30 49 38 47
            </a>
          </div>
        </div>

      </div>
    </main>

    <!-- Footer -->
    <footer class="z-20 relative">
      <Footer />
    </footer>
  </div>
</MainLayout>





