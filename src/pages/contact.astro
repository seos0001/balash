---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import soho01 from "../assets/images/soho01.webp";  
---

<MainLayout>
  <div class="fixed inset-0 flex flex-col justify-between items-center px-6 text-black bg-white min-h-screen mt-30 mr-50">
    <div class="w-full max-w-3xl flex-grow flex flex-col md:flex-row justify-between ml-32 mt-12">
      <!-- Billede til venstre -->
      <div class="w-full md:w-1/3 mb-2 md:mb-0 mr-6">
        <Image src={soho01} alt="Contact image" class="w-full h-auto object-cover" />
      </div>

      <!-- Tekst til højre for billedet -->
      <div class="w-full md:w-2/3">
        <!-- Toptekst -->
        <div class="mb-15">
          <p class="text-[42px] leading-snug mb-25">
            For any questions or<br />
            inquiries on private events<br />
            please contact.
          </p>
        </div>

        <!-- Kontaktpersoner -->
        <div class="mb-10 text-[18px]">
          <p>Emil Dos Santos / chef and service</p>
          <p>Bertram Blauenfeldt Otkjær / wine and service</p>
          <p>Vincent Groos / finance and service</p>
        </div>

        <!-- Bund: Mail og telefon -->
        <div class="flex justify-between text-[14px] w-full">
          <a href="mailto:balashaps@gmail.com" class="underline hover:text-[#1100FF] transition">
            balashaps@gmail.com
          </a>
          <a href="tel:+4530493847" class="underline hover:text-[#1100FF] transition">
            +45 30 49 38 47
          </a>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <Footer />
  </div>
</MainLayout>

